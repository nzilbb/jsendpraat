{
    "name": "Praat Integration",
    "version": "0.93",
    "manifest_version": 2,
    "description": "Allows Praat to open media on a page",
    "icons": {
	"16": "praat-16.png",
	"128": "nzilbb-128.png"
    },
    "author": "Robert Fromont, NZILBB",
    "applications": {
	"gecko": {
	    "id": "jsendpraat@nzilbb.canterbury.ac.nz",
	    "strict_min_version": "42.0"
	}
    },
    "page_action": {
	"default_title": "Praat",
	"default_icon": "praat-16.png",
	"default_popup": "popup.html"    
    },
    "background" : {
 	"scripts": ["background.js"],
	"persistent": false
    },
    "content_scripts": [
	{
	    "matches": ["http://*/*", "https://*/*"],
	    "css": ["content.css"],
	    "js": ["content.js"],
	    "run_at": "document_end"
	}
    ],
    "web_accessible_resources": [
	"*.png",
	"install.html",
	"install-jsendpraat.jar"
    ],
    "author": "Robert Fromont",
    "permissions": [
	"tabs", "nativeMessaging"
    ]
}
